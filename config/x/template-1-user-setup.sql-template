create user if not exists 'ki-kvrswebsite-x'@'::1' identified by '~ki-kvrswebsite-x-password~';
grant select
 , insert
 , update
 , delete
 , create
 , create routine
 , alter routine
  on kvrswebsitedb_x.*
  to 'ki-kvrswebsite-x'@'::1'
;
--
-- Must grant PROCESS priv to primary user to include SHOW ENGINE INNODB
-- STATUS output in MySQL-related exception reports.
--
;
grant process
  on *.*
  to 'ki-kvrswebsite-x'@'::1'
